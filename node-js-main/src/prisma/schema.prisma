generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model TargetUser {
  screen_name String @id
}

model User {
  id              String   @id // Twitter ID as a string
  screen_name     String   @unique
  name            String
  followers_count Int
  verified        Boolean
  description     String?
  created_at      DateTime @default(now())

  tweets Tweet[]
}

model Tweet {
  id             String   @id // Twitter ID as a string
  text           String
  created_at     DateTime
  lang           String
  view_count     Int?
  reply_count    Int?
  retweet_count  Int?
  favorite_count Int?
  quote_count    Int?
  media          Json? // array of objects {type, url}, as in Python

  in_reply_to_fk String? // parent's ID tweet
  in_reply_to    String?

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  // Self-relation for comments
  parent  Tweet?  @relation("TweetReplies", fields: [in_reply_to_fk], references: [id])
  replies Tweet[] @relation("TweetReplies") // array of comments on this tweet
}
